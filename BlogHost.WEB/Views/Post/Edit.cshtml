@model PostViewModel
@{
    ViewData["Title"] = "Post editing";
}

<div class="container">
    <form asp-action="Edit" asp-controller="Post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="Title" class="control-label">Title</label>
            <input type="text" asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Text" class="control-label">Text</label>
            <textarea asp-for="Text" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label class="control-label">Tags</label><br />
            <select multiple data-role="tagsinput" asp-for="Tags" class="form-control">
                @foreach (var postTag in Model.Tags)
                {
                    <option value="@postTag.Tag.Name"></option>
                }            
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
